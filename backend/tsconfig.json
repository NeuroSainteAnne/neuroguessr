{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "NodeNext",
    "target": "ES2024",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  }
}